{
  "compilerOptions": {
    // "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "Bundler", // node
    // "ignoreDeprecations": "6.0",
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": false,
    // "importHelpers": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    // "allowImportingTsExtensions": true
    "lib": ["ESNext", "DOM"],
    // "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
      // "@assets/*": ["./src/assets/*"],
      // "@components/*": ["./src/components/*"],
      // "@layouts/*": ["./src/layouts/*"],
      // "@locales/*": ["./src/locales/*"],
      // "@modules/*": ["./src/modules/*"],
      // "@router/*": ["./src/router/*"],
      // "@services/*": ["./src/services/*"],
      // "@stores/*": ["./src/stores/*"],
      // "@utils/*": ["./src/utils/*"],
      // "@views/*": ["./src/views/*"]
    },
    "types": [
      "node",
      "vite/client",
      // "naive-ui/volar",
      "unplugin-icons/types/vue"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/types/**/*.d.ts",
    "../demo-ecommerce-nuxt-4/types/*.d.ts",
    "./package.json"
  ],
  "exclude": ["node_modules", "dist"]
}
